  <script>
    function initializeGallery() {
      console.log("Página carregada - evento onload acionado");

      const figures = document.querySelectorAll("figure");

      for (let i = 0; i < figures.length; i++) {
        const figure = figures[i];
        figure.setAttribute("tabindex", "0"); // Torna acessível via teclado
        console.log(`tabindex adicionado à imagem ${i + 1}`);

        // Eventos de mouse
        figure.addEventListener("mouseover", () => {
          console.log(`Mouse entrou na imagem ${i + 1}`);
        });
        figure.addEventListener("mouseleave", () => {
          console.log(`Mouse saiu da imagem ${i + 1}`);
        });

        // Eventos de teclado (foco)
        figure.addEventListener("focus", () => {
          console.log(`Imagem ${i + 1} focada via teclado`);
        });
        figure.addEventListener("blur", () => {
          console.log(`Imagem ${i + 1} perdeu o foco`);
        });
      }
    }
  </script>
</body>
